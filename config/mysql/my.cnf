[mysqld]
# Server ID (CDC를 위해 필수)
server-id=1

# Binary Logging 설정 (CDC를 위해 필수)
log_bin=mysql-bin
binlog_format=ROW
binlog_row_image=FULL
expire_logs_days=7

# GTID 설정 (선택사항이지만 권장)
gtid_mode=ON
enforce_gtid_consistency=ON

# 문자셋 설정
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# 성능 설정
max_connections=200
innodb_buffer_pool_size=256M

[client]
default-character-set=utf8mb4
